<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp
  xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
  xsi:type="TaskPaneApp">

  <Id>a3b7c5aa-5c83-4adf-9e2a-86cd9ba5321f</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Mochileros RD</ProviderName>
  <DefaultLocale>es-ES</DefaultLocale>

  <DisplayName DefaultValue="Mochileros RD V2" />
  <Description DefaultValue="Mochileros RD V2 - Panel de gestión de tours en Excel." />

  <IconUrl DefaultValue="https://georgedeberas.github.io/mochileros/icon-32.png" />
  <HighResolutionIconUrl DefaultValue="https://georgedeberas.github.io/mochileros/icon-80.png" />

  <SupportUrl DefaultValue="https://georgedeberas.github.io/mochileros/" />

  <AppDomains>
    <AppDomain>https://georgedeberas.github.io</AppDomain>
  </AppDomains>

  <Hosts>
    <Host Name="Workbook" />
  </Hosts>

  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="ExcelApi" MinVersion="1.1" />
    </Sets>
  </Requirements>

  <DefaultSettings>
    <SourceLocation DefaultValue="https://georgedeberas.github.io/mochileros/index.html" />
  </DefaultSettings>

  <Permissions>ReadWriteDocument</Permissions>

  <!-- VERSION OVERRIDES (SIN ov:) PARA COMPATIBILIDAD EXCEL ONLINE -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/taskpaneappversionoverrides" xsi:type="VersionOverridesV1_0">

    <Hosts>
      <Host xsi:type="Workbook">

        <DesktopFormFactor>

          <GetStarted>
            <Title resid="GetStarted.Title" />
            <Description resid="GetStarted.Description" />
            <LearnMoreUrl resid="Support.Url" />
          </GetStarted>

          <FunctionFile resid="Commands.Url" />

          <ExtensionPoint xsi:type="PrimaryCommandSurface">

            <CustomTab id="MochilerosRD.Tab">
              <Label resid="Tab.Label" />

              <Group id="MochilerosRD.GroupMain">
                <Label resid="Group.Main.Label" />

                <Icon>
                  <bt:Image size="16" resid="Icon.16x16" />
                  <bt:Image size="32" resid="Icon.32x32" />
                  <bt:Image size="80" resid="Icon.80x80" />
                </Icon>

                <!-- BOTÓN 1: PANEL -->
                <Control xsi:type="Button" id="MochilerosRD.TogglePanel">

                  <Label resid="Button.TogglePanel.Label" />

                  <Supertip>
                    <Title resid="Button.TogglePanel.Label" />
                    <Description resid="Button.TogglePanel.Tooltip" />
                  </Supertip>

                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>

                  <Action xsi:type="ShowTaskpane">
                    <TaskpaneId>MochilerosRD.Taskpane</TaskpaneId>
                    <SourceLocation resid="Taskpane.Url" />
                  </Action>
                </Control>

                <!-- BOTÓN 2: ACTUALIZAR -->
                <Control xsi:type="Button" id="MochilerosRD.UpdateSystem">

                  <Label resid="Button.UpdateSystem.Label" />

                  <Supertip>
                    <Title resid="Button.UpdateSystem.Label" />
                    <Description resid="Button.UpdateSystem.Tooltip" />
                  </Supertip>

                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16" />
                    <bt:Image size="32" resid="Icon.32x32" />
                    <bt:Image size="80" resid="Icon.80x80" />
                  </Icon>

                  <Action xsi:type="ExecuteFunction">
                    <FunctionName>mochilerosUpdateSystem</FunctionName>
                  </Action>
                </Control>

              </Group>
            </CustomTab>
          </ExtensionPoint>

          <ExtensionPoint xsi:type="Taskpane">
            <TaskpaneId>MochilerosRD.Taskpane</TaskpaneId>
            <SourceLocation resid="Taskpane.Url" />
            <Title resid="Taskpane.Title" />
          </ExtensionPoint>

        </DesktopFormFacto
